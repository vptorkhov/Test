      h1.text-center="Лучшие предложения для отдыха"
      .container.row.d-flex.flex-row
        +content(3,1)
        +content(3,2)
        +content(3,3)
        +content(3,4)
        +content(3,5)
        +content(3,6)
      a.btn.btn-outline-primary.mt-4(role="button" href="#")="Показать больше"
